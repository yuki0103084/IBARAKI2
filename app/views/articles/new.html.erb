<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      

<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.text_field :title, autofocus: true, autucomplete: "title", :placeholder => "記事のタイトル", class: "form-control" %>
  </div>
  
  <div class="form-group">
     <label>ジャンル</label>
        <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "選択してください" }, class: 'form-control' %>
   </div>

  <div class="form-group">
    
    <%= f.text_area :body, autofocus: true, autucomplete: "body", :placeholder => "文章を入力してください", class: "form-control" %>
  </div>

  <div class="form-group">
         
           <%= f.attachment_field :image, class: "form-control" %>
           </div>

  <div>
    <%= f.submit "投稿する", class: "btn btn-success" %>
  </div>
<% end %>
